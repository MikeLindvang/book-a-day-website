  color: var(--text-primary);
  margin-bottom: var(--space-2);
  cursor: pointer;
}

.form-label.required::after {
  content: ' *';
  color: var(--danger);
}

.form-input {
  width: 100%;
  padding: var(--space-3) var(--space-4);
  border: 1px solid var(--gray-300);
  border-radius: var(--radius-md);
